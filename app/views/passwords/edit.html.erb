<h1>Edit Password</h1>
<%= form_with model: Current.user, url: edit_password_path do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
  
  <div class="mb-3">
    <%= form.label :email, 'Email: ' %>
    <%= form.text_field :email, placeholder: 'steve@mail.com', class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :password, 'Password: ' %>
    <%= form.password_field :password, placeholder: 'password', class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :passord_confirmation, 'Password_confirmation: ' %>
    <%= form.password_field :passord_confirmation, placeholder: 'password', class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.submit 'Update Password', class: 'btn btn-primary' %>
  </div>
<% end %>