<h1>Sign Up</h1>
<%= form_with model: @user, url: sign_up_path do |form| %>
  <% if @user.errors.any? %>
    <div>
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
  
  <div>
    <%= form.label :email, 'Email: ' %>
    <%= form.text_field :email, placeholder: 'steve@mail.com' %>
  </div>
  <div>
    <%= form.label :password, 'Password: ' %>
    <%= form.password_field :password, placeholder: 'password' %>
  </div>
  <div>
    <%= form.label :passord_confirmation, 'Password_confirmation: ' %>
    <%= form.password_field :passord_confirmation, placeholder: 'password' %>
  </div>
  <div>
    <%= form.submit 'sign up' %>
  </div>
<% end %>